<Window x:Class="LastExamen.TemperamentsInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastExamen"
        mc:Ignorable="d"
        Title="TemperamentsInfo" Height="592" Width="684" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="photo.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="395*"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Info" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="18"></TextBlock>
        <Border BorderBrush="#FF79C6F1" BorderThickness="8" CornerRadius="10" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button FontFamily="Comic Sans MS" FontSize="18" Background="White" BorderBrush="White" Click="Button_Click">Back</Button>
        </Border>
    </Grid>
</Window>
